<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DiningHall">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <Button
                android:id="@+id/dhlogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/dininglogo"/>

            <Button
                android:id="@+id/cowellBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/cowell"/>

            <Button
                android:id="@+id/crownBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/crown"/>

            <Button
                android:id="@+id/porterBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/porter"/>

            <Button
                android:id="@+id/rcBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/rachel"/>

            <Button
                android:id="@+id/c9Btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/collegenine"/>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>